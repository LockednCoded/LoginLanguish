  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Debug (OSX)",
      "type": "cppdbg",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build",
      "MIMode": "lldb",
      "program": "${workspaceFolder}/build/bin/LoginLanguish.app/Contents/MacOS/LoginLanguish",
      "windows": {
        //Force error on Windows
        "preLaunchTask": "",
        "program": ""
      }
    },
    {
      "request": "launch",
      "name": "Debug (Windows)",
      "type": "cppvsdbg",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/build/bin/LoginLanguish.exe"
    }
  ]
}
